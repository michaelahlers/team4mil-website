doctype 5
html(lang='en')

  head
    meta(http-equiv='X-UA-Compatible', content='chrome=1')

    title Team 4Mil
    link(type='text/css', media='screen', rel='stylesheet', href='index.css')

    script(type='text/javascript', src='//html5shim.googlecode.com/svn/trunk/html5.js')
    script(type='text/javascript', src='build.js')

    if ('production' == process.env.NODE_ENV)
      script(type='text/javascript', data-main='index.production', src='../lib/require-2.1.2.js')
    else
      script(type='text/javascript', data-main='index', src='../lib/require-2.1.2.js')

  body
    header
      include header.jade

    article(ng-cloak, ng-show='"Contact" == controller', ng-controller='Contact')
      include partials/contact.jade

    article(ng-cloak, ng-show='"Mission" == controller', ng-controller='Mission')
      include partials/mission.jade

    article(ng-cloak, ng-show='"Sponsorship" == controller', ng-controller='Sponsorship')
      include partials/sponsorship.jade

    footer
      include footer.jade
