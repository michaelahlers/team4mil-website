div(class='container-fluid hero-teams')
  div(class='row-fluid')
    div(class='offset1 span10')
      h1 {{content.title}}
  div(class='row-fluid')
    div(class='offset1 span10')
      div(class='hero-summary-teams', ng-bind-html='content.summary')

div(class='container-fluid body-sponsors')
  div(class='row-fluid')
    div(class='offset1 span5')
      h2 {{content.teams[0].title}}
      p {{content.teams[0].summary}}

      div(class='row-fluid', ng-repeat='members in toRows(content.teams[0].members, 3)')
        div(class='thumbnails')
          a(class='thumbnail span4', ng-repeat='member in members', ng-href='#/teams?id={{member.id}}')
            img(class='', ng-src='{{member.source}}')
            h4 {{member.name}}

    div(class='span5')
      h2 {{content.teams[1].title}}
      p {{content.teams[1].summary}}

      div(class='row-fluid', ng-repeat='members in toRows(content.teams[1].members, 3)')
        div(class='thumbnails')
          a(class='thumbnail span4', ng-repeat='member in members', ng-href='#/teams?id={{member.id}}')
            img(class='', ng-src='{{member.source}}')
            h4 {{member.name}}

div(id='modalBiography', class='modal fade', tabindex='-1')
  div(class='modal-header')
    //button(type='button', class='close') Ã—
    h3 {{focused.name}}
  div(class='modal-body', ng-bind-html='focused.biography')
  div(class='modal-footer')
    button(class='btn', ng-click='focused = {}') Close